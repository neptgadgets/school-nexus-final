{
  "name": "schoolnexus",
  "version": "1.0.0",
  "description": "Multi-School Management System with PWA capabilities",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "setup": "bash scripts/setup-dev.sh",
    "setup:dev": "bash scripts/setup-dev.sh",
    "deploy": "bash scripts/deploy-production.sh",
    "deploy:prod": "bash scripts/deploy-production.sh",
    "db:migrate": "psql $DATABASE_URL -f database/migrations/001_initial_schema.sql",
    "db:seed": "psql $DATABASE_URL -f database/seeds/001_demo_data.sql",
    "db:backup": "bash scripts/backup-database.sh",
    "db:reset": "echo 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' | psql $DATABASE_URL && npm run db:migrate",
    "db:test": "psql $DATABASE_URL -c 'SELECT 1;'",
    "docker:build": "docker build -t schoolnexus .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production schoolnexus",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@auth/pg-adapter": "^1.10.0",
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.47.0",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  }
}
